<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".activity.MainActivity"
    android:padding="20dp"
    android:orientation="vertical">

    <TextView
        android:id="@+id/mainWelcome"
        style="?attr/textAppearanceBody1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="20dp"
        android:text="@string/welcome_text"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/mainTitleLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/Widget.Design.TextInputLayout"
        app:endIconMode="clear_text"
        android:layout_marginVertical="12dp"
        app:layout_constraintTop_toBottomOf="@id/mainWelcome"
        app:layout_constraintLeft_toLeftOf="@id/mainWelcome"
        app:layout_constraintRight_toRightOf="parent">
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/mainTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="50dp"
            android:singleLine="true"
            android:inputType="text"
            android:hint="@string/title"
            android:maxLines="1"
            android:imeOptions="actionNext"/>
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/mainMessageLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/Widget.Design.TextInputLayout"
        app:endIconMode="clear_text"
        android:layout_marginVertical="12dp"
        app:layout_constraintTop_toBottomOf="@id/mainTitleLayout"
        app:layout_constraintLeft_toLeftOf="@id/mainWelcome"
        app:layout_constraintRight_toRightOf="parent">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/mainMessage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/message"
            android:imeOptions="actionNext"
            android:inputType="text"
            android:maxLines="1"
            android:minHeight="50dp"
            android:singleLine="true" />
    </com.google.android.material.textfield.TextInputLayout>

    <RadioGroup
        android:id="@+id/mainRadioGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/mainMessageLayout"
        app:layout_constraintLeft_toLeftOf="@id/mainWelcome"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginVertical="12dp">

        <TextView
            style="?attr/textAppearanceBody1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/choose_yours"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="3">
            <RadioButton
                android:id="@+id/mainRadioAnimal"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/animal"
                android:onClick="onRadioButtonClicked"
                android:buttonTint="?attr/colorPrimary"/>
            <RadioButton
                android:id="@+id/mainRadioShapes"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/shapes"
                android:onClick="onRadioButtonClicked"
                android:buttonTint="?attr/colorPrimary"/>
            <RadioButton
                android:id="@+id/mainRadioNone"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/none"
                android:onClick="onRadioButtonClicked"
                android:buttonTint="?attr/colorPrimary"
                android:checked="true"/>
        </LinearLayout>
    </RadioGroup>

    <LinearLayout
        android:id="@+id/mainActivityDataInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/mainRadioGroup"
        app:layout_constraintLeft_toLeftOf="@id/mainWelcome"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginVertical="12dp"
        android:orientation="vertical"
        android:visibility="gone">

        <TextView
            android:id="@+id/mainActivityDataInputTitle"
            style="?attr/textAppearanceBody1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/input"
            android:layout_marginBottom="6dp"/>

        <LinearLayout
            android:id="@+id/mainAnimalInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2"
            android:orientation="vertical"
            android:showDividers="middle"
            android:divider="@drawable/divider_view_padding"
            android:visibility="gone">

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                style="@style/Widget.Design.TextInputLayout"
                app:endIconMode="clear_text">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/animalName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="50dp"
                    android:singleLine="true"
                    android:inputType="text"
                    android:hint="Name"
                    android:maxLines="1"
                    android:imeOptions="actionNext"/>
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                style="@style/Widget.Design.TextInputLayout"
                app:endIconMode="clear_text">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/animalPicture"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="50dp"
                    android:singleLine="true"
                    android:inputType="textUri"
                    android:hint="Photo URL"
                    android:maxLines="1"
                    android:imeOptions="actionNext"/>
            </com.google.android.material.textfield.TextInputLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/mainShapeInput"
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:weightSum="2"
            android:orientation="horizontal"
            android:showDividers="middle"
            android:divider="@drawable/divider_view_padding"
            android:visibility="gone">
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="bottom"
                style="@style/Widget.Design.TextInputLayout"
                app:endIconMode="clear_text">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/shapeWidth"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="50dp"
                    android:singleLine="true"
                    android:inputType="numberDecimal"
                    android:hint="Width"
                    android:maxLines="1"
                    android:imeOptions="actionNext"/>
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                style="@style/Widget.Design.TextInputLayout"
                app:endIconMode="clear_text"
                android:layout_gravity="bottom">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/shapeLength"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="50dp"
                    android:singleLine="true"
                    android:inputType="numberDecimal"
                    android:hint="Length"
                    android:maxLines="1"
                    android:imeOptions="actionNext"/>
            </com.google.android.material.textfield.TextInputLayout>
        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/mainActivityButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/send"
        android:layout_marginVertical="12dp"
        app:layout_constraintTop_toBottomOf="@id/mainActivityDataInput"
        app:layout_constraintLeft_toLeftOf="@id/mainWelcome"
        app:layout_constraintRight_toRightOf="parent"
        tools:ignore="UsingOnClickInXml" />

    <com.google.android.material.progressindicator.CircularProgressIndicator
        android:id="@+id/mainProgress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:indeterminate="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:trackCornerRadius="4dp"
        app:trackThickness="6dp"
        android:visibility="gone"/>

</androidx.constraintlayout.widget.ConstraintLayout>